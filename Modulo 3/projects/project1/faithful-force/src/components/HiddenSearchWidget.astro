<div class="flex w-full justify-center items-center">
    <div class="bg-white h-12 w-fit flex p-2">
        <!-- add autofocus -->
        <input class="w-0 focus:outline-none" type="search" id="input-search" placeholder="Search..."/>
        <button  class="h-8 cursor-pointer" id="icon-search"><i class="bi bi-search"></i></button>
    </div>
</div>

<style>
    #input-search {
        transition: width 0.5s;
    }
</style>

<script>
    const input = document.getElementById("input-search");
    const icon = document.getElementById("icon-search");

    icon?.addEventListener("click", () => {
        input?.classList.toggle("w-40");
        input?.focus();
    });

</script>

